<div id="modalSimple" class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <a id="btn-action" href="" class="btn btn-primary">Sauvegarder</a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
      </div>
    </div>
  </div>
</div>


<script>
  document.querySelectorAll('a[data-lien]').forEach(function(element) {
    element.addEventListener('click', function() {
    let lien = this.getAttribute('data-lien');
    let titre = this.getAttribute('data-titre');
    let message = this.getAttribute('data-message');
    let libelleBouton = this.getAttribute('data-libelleBouton');

    document.getElementById('btn-action').setAttribute('href', lien);
    document.querySelector('.modal-title').textContent = titre;
    document.querySelector('.modal-body').textContent = message;
    document.getElementById('btn-action').textContent = libelleBouton;
    });
  });
</script>